{
  "name": "filevault",
  "version": "1.0.0",
  "description": "FileVault - Cloud Storage File Management Application",
  "private": true,
  "scripts": {
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:aws": "jest tests/aws-s3",
    "test:azure": "jest tests/azure-sa"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "express": "^5.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/node_modules/**",
      "!src/**/public/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  }
}

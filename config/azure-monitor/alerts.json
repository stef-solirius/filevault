{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "filevault",
      "metadata": {
        "description": "The name of the application"
      }
    },
    "appInsightsName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Application Insights resource"
      }
    },
    "actionGroupId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the Action Group for alerts"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appName'), '-high-exception-rate')]",
      "location": "global",
      "properties": {
        "description": "Alert when application exceptions exceed threshold",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "ExceptionCount",
              "metricName": "exceptions/count",
              "operator": "GreaterThan",
              "threshold": 10,
              "timeAggregation": "Total",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appName'), '-high-failed-requests')]",
      "location": "global",
      "properties": {
        "description": "Alert when failed requests exceed 5%",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT10M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "FailedRequests",
              "metricName": "requests/failed",
              "operator": "GreaterThan",
              "threshold": 5,
              "timeAggregation": "Count",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appName'), '-slow-response-time')]",
      "location": "global",
      "properties": {
        "description": "Alert when P95 response time exceeds 3 seconds",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "ResponseTime",
              "metricName": "requests/duration",
              "operator": "GreaterThan",
              "threshold": 3000,
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[concat(parameters('appName'), '-low-availability')]",
      "location": "global",
      "properties": {
        "description": "Alert when application availability drops below 95%",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT15M",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "name": "AvailabilityPercentage",
              "metricName": "availabilityResults/availabilityPercentage",
              "operator": "LessThan",
              "threshold": 95,
              "timeAggregation": "Average",
              "criterionType": "StaticThresholdCriterion"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/scheduledQueryRules",
      "apiVersion": "2021-08-01",
      "name": "[concat(parameters('appName'), '-file-upload-failures')]",
      "location": "[variables('location')]",
      "properties": {
        "description": "Alert on high file upload failure rate",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "allOf": [
            {
              "query": "traces | where message contains 'Error uploading file' | summarize count() by bin(timestamp, 5m) | where count_ > 5",
              "timeAggregation": "Count",
              "operator": "GreaterThan",
              "threshold": 0,
              "failingPeriods": {
                "numberOfEvaluationPeriods": 1,
                "minFailingPeriodsToAlert": 1
              }
            }
          ]
        },
        "actions": {
          "actionGroups": [
            "[parameters('actionGroupId')]"
          ]
        }
      }
    },
    {
      "type": "Microsoft.Insights/scheduledQueryRules",
      "apiVersion": "2021-08-01",
      "name": "[concat(parameters('appName'), '-azure-blob-errors')]",
      "location": "[variables('location')]",
      "properties": {
        "description": "Alert on Azure Blob Storage operation errors",
        "severity": 2,
        "enabled": true,
        "scopes": [
          "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
        ],
        "evaluationFrequency": "PT5M",
        "windowSize": "PT5M",
        "criteria": {
          "allOf": [
            {
              "query": "dependencies | where type == 'Azure blob' and success == false | summarize count() by bin(timestamp, 5m) | where count_ > 3",
              "timeAggregation": "Count",
              "operator": "GreaterThan",
              "threshold": 0,
              "failingPeriods": {
                "numberOfEvaluationPeriods": 1,
                "minFailingPeriodsToAlert": 1
              }
            }
          ]
        },
        "actions": {
          "actionGroups": [
            "[parameters('actionGroupId')]"
          ]
        }
      }
    }
  ],
  "outputs": {
    "alertNames": {
      "type": "array",
      "value": [
        "[concat(parameters('appName'), '-high-exception-rate')]",
        "[concat(parameters('appName'), '-high-failed-requests')]",
        "[concat(parameters('appName'), '-slow-response-time')]",
        "[concat(parameters('appName'), '-low-availability')]",
        "[concat(parameters('appName'), '-file-upload-failures')]",
        "[concat(parameters('appName'), '-azure-blob-errors')]"
      ]
    }
  }
}
